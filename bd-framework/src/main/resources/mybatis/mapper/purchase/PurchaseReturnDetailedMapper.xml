	<sql id="selectRelationVo">
    SELECT
	a.id,
	a.parent_id,
	a.warehouse_id,
	b.commodity_id,
	b.date_of_storage,
	c.commodity_name,
	c.commodity_abbreviation,
	c.commodity_code,
	c.basic_unit,
	c.specifications,
    d.id AS position_id,
	d. NAME AS position_name,
	a.number,
	a.post_discount_price,
	a.total,
	a.remark,
	a.create_by,
	a.create_time,
	a.update_by,
	a.update_time
    FROM
        pur_purchase_return_detailed a
    LEFT JOIN sys_warehouse b ON a.warehouse_id = b.warehouse_id AND b.status = 1
    LEFT JOIN ess_commodity_base c ON b.commodity_id = c.id
    AND c. STATUS = 1
    LEFT JOIN ess_warehouse_info d ON d.id = b.position_id
    AND d. STATUS = 1
    </sql>

